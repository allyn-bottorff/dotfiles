[diff]
    tool = difftastic
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[pager]
    difftool = true

[alias]
	sw = switch
	lg = log --pretty --oneline --graph
[push]
    autoSetupRemote = true
    followTags = true

[column]
    ui = auto

[branch]
    sort = -committerdate

[tag]
    sort = version:refname

[help]
    autocorrect = prompt
[commit]
    verbose = true
