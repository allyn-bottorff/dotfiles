theme = Iceberg-dark
# theme = Kanagawa Dragon
font-family = "TX-02"
font-style = "Regular"
font-style-italic = "Oblique"
font-style-bold = "Bold"
font-style-bold-italic = "Bold Oblique"
font-synthetic-style = false
font-size = 14
font-thicken = false
cursor-style-blink = true
window-padding-balance = true

split-divider-color=3ccce6

command = /Users/allyn.bottorff/.nix-profile/bin/fish --login --interactive

keybind = global:cmd+grave_accent=toggle_quick_terminal
keybind = super+h=goto_split:left
keybind = super+j=goto_split:down
keybind = super+k=goto_split:up
keybind = super+l=goto_split:right

quick-terminal-position = center

#custom-shader = ./shaders/blur.glsl
#custom-shader = shaders/bloom.glsl
